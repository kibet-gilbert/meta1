params {
    outdir = './results'
    publish_dir_mode = 'copy'
}

process {
    withName: FastQC {
        publishDir = [
        path: "${params.outdir}/fastqc",
        mode: 'copy'
        ]
    }

    withName: FastP {
        publishDir = [
        path: "${params.outdir}/fastp",
        mode: 'copy'
        ]
    }
    withName: Kraken2Host {
        publishDir = [
        path: "${params.outdir}/kraken2",
        mode: 'copy'
        ]
    }
    withName: Kraken2Taxonomy {
        publishDir = [
        path: "${params.outdir}/kraken2",
        mode: 'copy'
        ]
    }
    withName: KronaTools {
        publishDir = [
        path: "${params.outdir}/krona",
        mode: 'copy'
        ]
    }
    withName: MetaSPAdes {
        publishDir = [
        path: "${params.outdir}/spades",
        mode: 'copy'
        ]
    }
}